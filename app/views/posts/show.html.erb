<h1>投稿詳細ページ</h1>

<%= link_to "投稿一覧", posts_path %>

<div class="post-wrapper">
  <div class="post-title">
    タイトル：<%= @post.title %>
  </div>
  <div class="post-spoiler">
    <% if @post.spoiler %>
      ネタバレあり
    <% else %>
      ネタバレなし
    <% end %>
  </div>
  <div class="post-category">
    カテゴリー：<%= @post.category.name %>
  </div>
  <div class="post-content">
    本文：<%= @post.content %>
  </div>
</div>