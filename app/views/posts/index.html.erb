<%= render "shared/header" %>

<div class="index-title d-flex align-items-center justify-content-center">
  <div class="h1 text-center text-white display-4 font-weight-bold">投稿一覧ページ</div>
</div>

<div class="container mt-5">
  <div class="row justify-content-around bg-light rounded pt-3 pb-3">
    <% @posts.each do |post| %>
      <div class="col-5">
        <div class="card mt-4 p-2">
          <% if user_signed_in? && post.user_id == current_user.id %>
          <div class="row p-1">
            <%= link_to "編集する", edit_post_path(post.id), class:"btn btn-warning btn-sm col-2 ml-1" %>
            <%= link_to "削除する", post_path(post.id), method: :delete, class:"btn btn-danger btn-sm col-2 ml-1" %>
          </div>
          <% end %>
          <div class="card-boddy">
            <%= link_to post_path(post.id), class:"post-link card-boddy text-dark" do %>
            <div class="card-title ">
              タイトル：<%= post.title %>
            </div>
            <div class="post-spoiler">
              <% if post.spoiler %>
                ネタバレあり
              <% else %>
                ネタバレなし
              <% end %>
            </div>
            <div class="post-category">
              カテゴリー：<%= post.category.name %>
            </div>
            <div class="card-text">
              本文：<%= post.content %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= render "shared/footer" %>
