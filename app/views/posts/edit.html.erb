
<%= render "shared/header" %>


<div class="index-title d-flex align-items-center justify-content-center">
  <div class="h1 text-center text-white font-weight-bold">投稿編集ページ</div>
</div>


<div class="container-fluid">
  <div class="container">
    <div class="row justify-content-center mt-5 mb-5">
      <div class="col-8 bg-light p-5">

        <%= form_with model: @post, local: true do |f| %>

        <div class="row justify-content-center">
          <div class="new-post col-4 text-center border-bottom p-3 mb-3 font-weight-bold">投稿の編集</div>
        </div>

        <div class="form-group">
          <%= f.label :title, "タイトル", class:"mb-3" %><br />
          <%= f.text_field :title, autofocus: true, placeholder:"作品のタイトルを入力してください", autocomplete: "off", class:"form-control mb-3" %>
        </div>

        <div class="form-group">
          <%= f.label :category_id, "カテゴリー", class:"mb-3" %><br />
          <%= f.collection_select(:category_id, Category.all, :id, :name, {include_blank: "選択してください"}, class:"form-control mb-3") %>
        </div>

        <div class="form-group">
          ネタバレ
          <div class="m-3">
            <%= f.radio_button :spoiler, :true %>
            <%= f.label :spoiler, "ネタバレあり", {value: :true} %>
            <%= f.radio_button :spoiler, :false %>
            <%= f.label :spoiler, "ネタバレなし", {value: :false} %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :content, "本文", class:"mb-3" %><br />
          <%= f.text_area :content, placeholder:"内容を入力してください", autocomplete: "off", rows: "10", class:"form-control mb-3" %>
        </div>

        <div class="d-flex justify-content-center mt-4">
          <%= f.submit "編集を保存する！" , class:"btn btn-primary" %>
        </div>

        <div class="d-flex justify-content-center mt-4">
          <%= link_to "編集を保存せずに一覧に戻る", posts_path %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= render "shared/footer" %>
