<%= render "shared/header" %>

<div class="inquiry-wrapper container">
  <%= form_with model: @inquiry, url: inquiry_thanks_path, local: true, class:"row justify-content-center" do |f| %>
    <div class="text-center lead mt-5">
      <h1>お問い合わせ内容の確認</h1>
    </div>

    <div class="form-group row justify-content-center">
      <div class="col-8 my-3">
        お名前
      </div>
      <div class="col-8">
        <%= f.hidden_field :name %>
        <%= @inquiry.name %>
      </div>
    </div>

    <div class="form-group row justify-content-center">
      <div class="col-8 my-3">
        お名前（ふりがな）
      </div>
      <div class="col-8">
        <%= f.hidden_field :name_kana %>
        <%= @inquiry.name_kana %>
      </div>
    </div>

    <div class="form-group row justify-content-center">
      <div class="col-8 my-3">
        メールアドレス
      </div>
      <div class="col-8">
        <%= f.hidden_field :email %>
        <%= @inquiry.email %>
      </div>
    </div>

    <div class="form-group row justify-content-center">
      <div class="col-8 my-3">
        お問い合わせ内容
      </div>
      <div class="col-8">
        <%= f.hidden_field :message %>
        <%= @inquiry.message %>
      </div>
    </div>

    <div class="form-group row justify-content-center">
      <%= f.submit "送信", class:"btn btn-primary col-3 my-3" %>
    </div>

    <div class="row justify-content-center">
      <%= link_to "入力画面に戻る", inquiry_new_path, class:"btn btn-secondary btn-sm col-2" %>
    </div>
  <% end %>
</div>

