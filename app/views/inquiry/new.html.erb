<%= render "shared/header" %>

<div class="inquiry-wrapper container">
  <%= form_with model: @inquiry, url: inquiry_confirm_path, local: true, class:"row justify-content-center" do |f| %>
    <div class="text-center lead mt-5">
      <h1>お問い合わせ</h1>
    </div>

    <%= render 'shared/error_messages', model: f.object %>

    <div class="form-group row justify-content-center">
      <%= f.label :name, "お名前", class:"col-8" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "off", class:"col-8 my-3" %>
    </div>

    <div class="form-group row justify-content-center">
      <%= f.label :name_kana, "お名前（ふりがな）", class:"col-8" %><br />
      <%= f.text_field :name_kana, autocomplete: "off", class:"col-8 my-3" %>
    </div>

    <div class="form-group row justify-content-center">
      <%= f.label :email, "メールアドレス", class:"col-8" %><br />
      <%= f.text_field :email, autocomplete: "off", class:"col-8 my-3" %>
    </div>

    <div class="form-group row justify-content-center">
      <%= f.label :message, "お問い合わせ内容", class:"col-8" %><br />
      <%= f.text_area :message, autocomplete: "off", rows: "5", class:"col-8 my-3 p-1" %>
    </div>

    <div class="form-group row justify-content-center">
      <%= f.submit "確認画面へ進む", class:"btn btn-primary col-3 my-3" %>
    </div>
  <% end %>
</div>
